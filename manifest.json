{
  "manifest_version": 2,
  "name": "Slack Remind",
  "description": "Reminders where you need them",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "https://*.slack.com/*",
    "http://*.slack.com/*",
    "storage",
	"notifications",
	"alarms"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
   }
}
